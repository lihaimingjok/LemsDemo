<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="#FF3A30"
    android:layout_marginTop="50dp"
    android:visibility="visible"
    android:id="@+id/rlReason"
    >

    <TextView
        android:textSize="14sp"
        android:textColor="@color/main_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvReason"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:text=""
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ry_icon_error_message"
        android:layout_alignBottom="@+id/tvReason"
        android:layout_toLeftOf="@+id/tvReason"
        android:layout_toStartOf="@+id/tvReason"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp" />


</RelativeLayout>