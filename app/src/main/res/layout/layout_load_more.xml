<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/workbench_item_height"
    android:background="@drawable/selector_listview_item">
    <LinearLayout
        android:id="@+id/ll_load_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/workbench_item_height"
        android:background="@drawable/bg_item_common_selector"
        android:gravity="center"
        android:orientation="horizontal" >

        <ProgressBar
            android:id="@+id/pb_load_more"
            style="@style/Widget.ProgressBar"
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_load_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/main_height_smaller2"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="@string/loading_more"
            android:textColor="@color/main_text_color_gray"
            android:textSize="12sp" />

    </LinearLayout>
</RelativeLayout>
