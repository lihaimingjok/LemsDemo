                android:background="#f5f5f5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="安全生产信息（选填）"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/ibSafe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ys_list_icon_narrowed"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llSafeBlank"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>
        <LinearLayout
            android:id="@+id/rlSafe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="合格证书编\n号："
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/etSafeNo"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/shape_et_person"
                    android:hint="请输入证书编号"
                    android:inputType="textPersonName"
                    android:paddingLeft="8dp"
                    android:textColor="#999999"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:orientation="horizontal"
                android:background="#ffffff">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:paddingLeft="16dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="合格证书照\n片："
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:id="@+id/tvCardLabel"/>

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="14dp"
                >
                <ImageView
                    android:id="@+id/ivCardPic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"

                    android:src="@drawable/ys_icon_picture_default" />

                <TextView
                    android:id="@+id/textViewq"
                    android:layout_width="100dp"
                    android:layout_height="20dp"
                    android:layout_alignBottom="@+id/ivCardPic"
                    android:layout_alignLeft="@+id/ivCardPic"
                    android:layout_alignStart="@+id/ivCardPic"
                    android:alpha="0.5"
                    android:background="#000000"
                    android:gravity="center"
                    android:text="更换图片"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
                </RelativeLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/white" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#f5f5f5">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="备注（选填）"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/ibRemark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ys_list_icon_narrowed"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:padding="15dp"
                    />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llRemarkBlank"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

            </LinearLayout>

        <LinearLayout
            android:id="@+id/rlRemark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#ffffff">

                <EditText
                    android:id="@+id/etRemark"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/shape_et_person"
                    android:hint="请输入"
                    android:minLines="3"
                    android:inputType="textMultiLine"
                    android:gravity="left|top"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingTop="8dp"
                    android:textColor="#999999"
                    android:textSize="14sp" />

            </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/llbuttom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        >
        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="提交"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_common_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llybuttom"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/btnNoPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="不通过"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_common_style"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            />

        <Button
            android:id="@+id/btnPass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="通过"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:background="@drawable/btn_common_style"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            />
    </LinearLayout>



    <include layout="@layout/layout_loading" />



</RelativeLayout>