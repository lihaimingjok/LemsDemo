<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/tv_mechine_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:ellipsize="end"
                android:maxEms="8"
                android:singleLine="true"
                android:text="一号考勤机信息2"
                android:textColor="@color/txt_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_brand"
                android:layout_width="28dp"
                android:layout_height="14dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/tv_mechine_name"
                android:background="@drawable/shape_orange_background"
                android:gravity="center"
                android:text="中控"
                android:textColor="@color/txt_orange_color"
                android:textSize="9sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_bind_equipment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:text="一号塔吊"
            android:textColor="@color/txt_black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_mechine_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:text="启用中"
            android:textColor="@color/txt_black"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>